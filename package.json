{
  "name": "noide",
  "version": "0.1.1",
  "description": "Web Editor built on hapi and nes websockets using browserify, superviews.js, bootstrap and the ACE editor.",
  "keywords": [
    "Browser editor",
    "Code editor",
    "Web editor",
    "IDE",
    "hapi",
    "browserify",
    "nes",
    "superviews.js"
  ],
  "main": "server.js",
  "bin": {
    "noide": "server.js"
  },
  "scripts": {
    "start": "pm2 start config/pm2.json",
    "stop": "pm2 stop noide",
    "pkg": "pkg package.json",
    "build:app:js": "browserify client/index.js -t [superviewify] -o server/public/js/index.js -d",
    "build:core:js": "browserify client/core.js -o server/public/js/core.js",
    "build:css": "node-sass client/index.scss --include-path node_modules/bootstrap-sass/assets/stylesheets/_bootstrap.scss -o server/public/css",
    "build": "npm run build:core:js && npm run build:app:js && npm run build:css",
    "watch": "wisk ./bin/wisk.js",
    "watch:server": "nodemon --config nodemon.json",
    "watch:client": "nodemon --watch client --ext \"html scss js\" --exec \"npm run build\"",
    "copy:assets": "rm -rf server/public/fonts && cp -R node_modules/font-awesome/fonts server/public",
    "lint": "standard",
    "test": "npm run lint"
  },
  "dependencies": {
    "boom": "3.1.2",
    "bootstrap-sass": "3.3.6",
    "browserify": "13.0.0",
    "chokidar": "1.4.3",
    "cross-spawn": "^6.0.5",
    "extend": "3.0.0",
    "find-free-port": "^2.0.0",
    "font-awesome": "4.5.0",
    "glupe": "0.0.1",
    "good": "6.5.0",
    "good-console": "5.3.1",
    "good-file": "5.1.2",
    "handlebars": "4.0.5",
    "hapi": "13.0.0",
    "incremental-dom": "0.4.1",
    "inert": "3.2.0",
    "is-utf8": "0.2.1",
    "joi": "7.2.3",
    "jquery": "2.2.1",
    "minimist": "1.2.0",
    "ncp": "2.0.0",
    "nes": "3.0.0",
    "node-sass": "3.4.2",
    "page": "1.6.4",
    "querystring": "0.2.0",
    "rimraf": "2.5.1",
    "spawn-args": "0.1.0",
    "standard": "6.0.4",
    "standard-format": "2.1.1",
    "superviewify": "0.4.2",
    "vision": "4.0.1"
  },
  "devDependencies": {
    "nodemon": "^1.18.3",
    "wisk": "1.0.0"
  },
  "pkg": {
    "targets": [
      "node10-win-x64"
    ],
    "scripts": [
      "server/*.js",
      "server/routes/**/*.js"
    ],
    "assets": [
      "server/{public,views}/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/davidjamesstone/noide.git"
  },
  "bugs": {
    "url": "http://github.com/davidjamesstone/noide/issues",
    "email": "davidjamesstone@gmail.com"
  },
  "author": "David Stone <davidjamesstone@gmail.com>",
  "license": "MIT",
  "standard": {
    "ignore": [
      "server/public"
    ]
  }
}
